<apex:page standardController="Hour__c" >
  <apex:form >
    <apex:pageBlock title="Hour" mode="edit">
      
<apex:pageMessages />
      <apex:pageBlockButtons >
        <apex:commandButton action="{!save}" value="Save"/>
        <apex:commandButton action="{!cancel}" value="Cancel"/>
      </apex:pageBlockButtons>
      <apex:pageBlockSection title="" columns="1">
        <apex:inputField value="{!Hour__c.Wage__c}" required="true"/>  
        <apex:inputField value="{!Hour__c.HourAmount__c}" required="true"/>
        <apex:inputField value="{!Hour__c.RateAmount__c}" required="true"/>
        <apex:inputField value="{!Hour__c.Location__c}" required="true"/>
        <apex:inputField value="{!Hour__c.HourEID__c}"/>      
      </apex:pageBlockSection>
    </apex:pageBlock>
  </apex:form>
</apex:page>